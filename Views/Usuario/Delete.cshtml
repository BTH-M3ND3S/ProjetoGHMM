@model SistemaGHMM.Models.UsuarioModel

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-color: #1A1A1A;
        color: #FFFFFF;
        font-family: 'Arial', sans-serif;
    }

    h1, h3, h4 {
        color: #000000;
        text-align: center;
    }

    hr {
        border-top: 1px solid #FFFFFF;
        margin: 10px 0;
    }

    dt {
        color: #A6A6A6;
        font-weight: bold;
        font-size: 1.1rem; 
    }

    dd {
        color: #FFFF;
        font-size: 1rem;
        margin-bottom: 15px; 
    }

    .row {
        margin: 0 auto;
        padding: 20px;
        background-color: #2E2E2E;
        border-radius: 10px;
        justify-content: center;
        width: 40%;
    }

    a {
        color: #000000;
        text-decoration: none;
        font-weight: bold;
    }

        a:hover {
            text-decoration: underline;
        }

    .btn-danger {
        background-color: #d9534f;
        border: none;
        color: white;
        padding: 10px 15px;
        border-radius: 5px;
        transition: background-color 0.3s; 
    }

        .btn-danger:hover {
            background-color: #c9302c; 
        }

    .btn-group {
        text-align: center;
        margin-top: 20px;
    }
</style>

<h1>Deletar</h1>

<h3>Você realmente quer deletar isto?</h3>
<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FotoUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.FotoUrl" alt="User Image" style="width:150px;height:150px;border-radius:50%;">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioCpf)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioCpf)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioTelefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioTelefone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioDataNascimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioDataNascimento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioEscolaridade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioEscolaridade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cargo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cargo.CargoNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Setor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Setor.SetorNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioSenha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioSenha)
        </dd>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="btn-group">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Voltar</a>
            </div>
        </form>
    </dl>

    
</div>
