@model IEnumerable<SistemaGHMM.Models.MaquinaModel>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        background-color: #1A1A1A;
        color: #FFFFFF;
        font-family: 'Arial', sans-serif;
    }

    h1 {
        color: #000000;
        text-align: center;
        margin-bottom: 20px;
    }

    .table {
        width: 80%;
        border-collapse: collapse;
        background-color: #2E2E2E;
        margin-bottom: 20px;
        border-radius: 8px;
        overflow: hidden;
        margin: 0 auto;
    }

        .table th, .table td {
            padding: 12px 15px;
            text-align: left;
        }

        .table th {
            background-color: #1A1A1A;
            color: #FFFFFF;
            font-weight: bold;
        }

        .table td {
            color: #FFFFFF;
            border-bottom: 1px solid #444;
        }

        .table tr:hover {
            background-color: #333333;
        }

    a {
        color: #696767;
        text-decoration: none;
            }

        a:hover {
            text-decoration: underline;
        }

    p {
        text-align: center;
    }
    p a {
        background-color: #696767;
        color: #000000;
        padding: 10px 15px;
        text-decoration: none;
        border-radius: 5px;
        margin-bottom: 10px;
    }

        p a:hover {
            background-color: #474747;
            text-decoration: none;
            color: #000000;
        }

    img {
        width: 100px;
        height: 100px;
    }
</style>

<h1>Maquina</h1>

<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaquinaNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoMaquina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Setor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaquinaModelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaquinaNumeroSerie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fabricante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaquinaDataAquisicao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaquinaFotoUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaquinaPeso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaquinaVoltagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaquinaDetalhes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaquinaNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoMaquina.TipoMaquinaNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Setor.SetorNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaquinaModelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaquinaNumeroSerie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fabricante.FabricanteNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaquinaDataAquisicao)
            </td>
            <td>
                <img src="@Url.Content(item.MaquinaFotoUrl)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaquinaPeso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaquinaVoltagem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaquinaDetalhes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
