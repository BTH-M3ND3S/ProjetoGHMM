@model SistemaGHMM.Models.MaquinaModel

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        background-color: #1A1A1A;
        color: #FFFFFF;
        font-family: 'Arial', sans-serif;
    }

    h1, h4 {
        color: #000;
        text-align: center;
    }

    hr {
        border-top: 1px solid #FFFFFF;
    }

    dt {
        color: #A6A6A6;
    }

    dd {
        color: #FFF;
    }

    .row {
        width: 40%;
        margin: 0 auto;
        padding: 20px;
        background-color: #2E2E2E;
        border-radius: 10px;
        justify-content: center;
    }

    a {
        color: #000000;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    .btn-group {
        margin-top: 20px;
    }
</style>
<h1>Detalhes</h1>

<div>
    <h4>Maquina</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaquinaNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaquinaNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoMaquina)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoMaquina.TipoMaquinaNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Setor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Setor.SetorNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaquinaModelo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaquinaModelo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaquinaNumeroSerie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaquinaNumeroSerie)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fabricante)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fabricante.FabricanteNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaquinaDataAquisicao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaquinaDataAquisicao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaquinaFotoUrl)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.MaquinaFotoUrl" alt="User Image" style="width:150px;height:150px;border-radius:50%;">
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaquinaPeso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaquinaPeso)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaquinaVoltagem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaquinaVoltagem)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaquinaDetalhes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaquinaDetalhes)
        </dd>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
            <a asp-action="Index">Voltar</a>
        </div>
    </dl>
</div>

