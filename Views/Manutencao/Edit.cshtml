@model SistemaGHMM.Models.ManutencaoModel

@{
    ViewData["Title"] = "Edit";
}

<style>
    body {
        background-color: #1A1A1A;
        color: #FFFFFF;
        font-family: 'Arial', sans-serif;
    }

    h1, h4 {
        color: #000000;
        text-align: center;
    }

    hr {
        border-top: 1px solid #FFFFFF;
    }

    .form-group label {
        color: #FFFFFF;
    }

    .form-control {
        background-color: #2E2E2E;
        border: 1px solid #444;
        color: #FFFFFF;
        border-radius: 5px;
        padding: 10px;
    }

        .form-control:focus {
            border-color: #4CAF50;
            background-color: #333333;
            outline: none;
        }

    .text-danger {
        color: #FF4C4C;
    }

    .btn-primary {
        background-color: #696767;
        border-color: #696767;
        color: #FFFFFF;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
        width: 100%;
        margin-top: 10px;
    }

        .btn-primary:hover {
            background-color: #474747;
            border-color: #474747;
        }

    .form-group {
        margin-bottom: 20px;
    }

    .col-md-4 {
        margin: 0 auto;
        padding: 20px;
        background-color: #2E2E2E;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        margin-bottom: 60px;
    }

    a {
        color: #FFFF;
        text-decoration: none;
    }

        a:hover {
            text-decoration: none;
        }

    .back-link {
        text-align: center;
        margin-top: 20px;
    }
</style>

<h1>Editar</h1>

<h4>Manutencao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TipoManutencaoId" class="control-label"></label>
                <select asp-for="TipoManutencaoId" class="form-control" asp-items="ViewBag.TipoManutencaoId"></select>
                <span asp-validation-for="TipoManutencaoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManutencaoData" class="control-label"></label>
                <input asp-for="ManutencaoData" class="form-control" />
                <span asp-validation-for="ManutencaoData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManutencaoDescricao" class="control-label"></label>
                <input asp-for="ManutencaoDescricao" class="form-control" />
                <span asp-validation-for="ManutencaoDescricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManutencaoCusto" class="control-label"></label>
                <input asp-for="ManutencaoCusto" class="form-control" />
                <span asp-validation-for="ManutencaoCusto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TecnicosId" class="control-label"></label>
                <select asp-for="TecnicosId" class="form-control" asp-items="ViewBag.TecnicosId"></select>
                <span asp-validation-for="TecnicosId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
            <div class="back-link">
                <a asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
