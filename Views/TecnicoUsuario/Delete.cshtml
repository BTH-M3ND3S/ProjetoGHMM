@model SistemaGHMM.Models.TecnicoUsuarioModel

@{
    ViewData["Title"] = "Delete";
}
<style>
    body {
        background-color: #1A1A1A;
        color: #FFFFFF;
        font-family: 'Arial', sans-serif;
    }

    h1, h3, h4 {
        color: #000000;
        text-align: center;
    }

    hr {
        border-top: 1px solid #FFFFFF;
        margin: 10px 0;
    }

    dt {
        color: #A6A6A6;
        font-weight: bold;
        font-size: 1.1rem; 
    }

    dd {
        color: #FFFF;
        font-size: 1rem;
        margin-bottom: 15px; 
    }

    .row {
        margin: 0 auto;
        padding: 20px;
        background-color: #2E2E2E;
        border-radius: 10px;
        justify-content: center;
        width: 40%;
    }

    a {
        color: #000000;
        text-decoration: none;
        font-weight: bold;
    }

        a:hover {
            text-decoration: underline;
        }

    .btn-danger {
        background-color: #d9534f;
        border: none;
        color: white;
        padding: 10px 15px;
        border-radius: 5px;
        transition: background-color 0.3s; 
    }

        .btn-danger:hover {
            background-color: #c9302c; 
        }

    .btn-group {
        text-align: center;
        margin-top: 20px;
    }
</style>
<h1>Deletar</h1>

<h3>Você realmente quer deletar isto?</h3>
<div>
    <h4>Tecnico Usuario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tecnicos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tecnicos.TecnicoNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario.UsuarioCpf)
        </dd>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Deletar" class="btn btn-danger" /> |
            <a asp-action="Index">Voltar</a>
        </form>
    </dl>
    
    
</div>
